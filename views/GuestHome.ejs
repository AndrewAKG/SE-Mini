<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My Portfolio</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <style media="screen">
        * {
            font-family: Montserrat, "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-weight: bolder;
        }
        
        .row {
            margin: 0;
        }
        
        .navbar-default {
            height: 100px;
            padding-top: 23px;
            padding-left: 70px;
            border: 0;
            border-radius: 0 !important;
            background: #2c3e50;
        }
        
        .navbar-default .navbar-brand {
            text-transform: uppercase;
            font-size: 2em;
            text-decoration: none;
            color: white;
            transition: color 0.3s ease;
            cursor: pointer;
        }
        
        .navbar-default .navbar-brand:hover {
            color: #18bc9c;
            transition: color 0.3s ease;
        }
        
        .card {
            padding: 10px;
            padding-top: 20px;
            background: darkcyan;
            border: 1px #c8c3ff solid;
            border-radius: 5px;
            text-align: center;
            margin: 10px 3% 1% 3%;
            height: calc(80% * (1/3));
            width: calc(80% * (1/3));
        }
        
        .card .card-title {
            color: cornsilk;
            font-size: 2em;
            font-weight: bold;
            text-transform: capitalize;
        }
        
        .card .card-link {
            margin-top: 40px;
            font-size: 1.1em;
            font-weight: bold;
            width: 90%;
            border: 2px solid white;
            color: white;
            background: transparent;
            transition: background-color 0.5s ease;
        }
        
        .card .card-link:hover {
            color: #18bc9c;
            background: white;
            transition: background-color 0.5s ease;
        }
        
        .form-container {
            height: 400px;
            border-left: 1px solid gray;
            padding-left: 30px;
        }
        
        .form-control {
            width: 90%;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <Text class="navbar-brand" style="margin-right: 800px">WELCOME TO STUDENTS PORTFOLIOS</Text>
                <a class="navbar-brand" href="/" style="border: 0;
            border-radius: 0">HOME PAGE</a>
            </div>
        </div>
    </nav>
    <div class="row">
        <div class="col-xs-12 col-md-8">
            <div class="row">
                <% for(var i=0; i<Users.docs.length; i++){%>
                    <div class="card col-xs-4">
                        <h4 class="card-title">
                            <%= Users.docs[i].UserName %>
                        </h4>
                        <% for(var j=0; j<Users.docs[i].Links.length; j++){%>
                            <a href="<%= Users.docs[i].Links[j].link %>" class="btn btn-primary card-link">
                                <%= Users.docs[i].Links[j].title %>
                            </a>
                            <% } %>
                    </div>
                    <% } %>
            </div>
        </div>
        <div>
            <% for(var i=0; i<Users.pages; i++){%>
                <form method="POST" action="/Guest">
                    <button type="submit"><%= Users.page %></button>
                </form>
                <% } %>
        </div>

</html>